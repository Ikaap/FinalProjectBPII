<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@color/Cream"
    tools:context=".ProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/iv_back_profile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_baseline_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Profile"
            android:textColor="@color/Brown_title"
            android:textSize="23sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivprofile"
            android:layout_width="130dp"
            android:layout_height="115dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_account_circle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivprofile">

            <TextView
                android:id="@+id/tvUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:text="Username"
                android:textColor="@color/Brown_text_login"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_login_profile"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Sign In" />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Akun"
        android:fontFamily="@font/poppins_bold"
        android:textSize="15sp"
        android:textColor="@color/Brown_hint_login"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/iv_back_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_assignment"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pemesanan"
            android:fontFamily="@font/poppins_bold"
            android:textSize="15sp"
            android:textColor="@color/Brown_text_login"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/iv_to_pesanan"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@drawable/ic_baseline_arrow_forward"
            android:layout_marginLeft="172dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/iv_back_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_wallet"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Metode Pembayaran"
            android:fontFamily="@font/poppins_bold"
            android:textSize="15sp"
            android:textColor="@color/Brown_text_login"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/iv_to_metode_bayar"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@drawable/ic_baseline_arrow_forward"
            android:layout_marginLeft="101dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/iv_back_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_settings"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengaturan Bahasa"
            android:fontFamily="@font/poppins_bold"
            android:textSize="15sp"
            android:textColor="@color/Brown_text_login"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/iv_to_atur_bahasa"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@drawable/ic_baseline_arrow_forward"
            android:layout_marginLeft="110dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info Lainnya"
        android:fontFamily="@font/poppins_bold"
        android:textSize="15sp"
        android:textColor="@color/Brown_hint_login"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/iv_back_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_map"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokasi"
            android:fontFamily="@font/poppins_bold"
            android:textSize="15sp"
            android:textColor="@color/Brown_text_login"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/iv_to_profile_map"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@drawable/ic_baseline_arrow_forward"
            android:layout_marginLeft="217dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/iv_back_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_rule"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ketentuan dan Privasi"
            android:fontFamily="@font/poppins_bold"
            android:textSize="15sp"
            android:textColor="@color/Brown_text_login"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/iv_to_kp"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@drawable/ic_baseline_arrow_forward"
            android:layout_marginLeft="94dp"
            android:layout_gravity="center"/>

    </LinearLayout>


</LinearLayout>